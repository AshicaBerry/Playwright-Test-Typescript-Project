{
	"compilerOptions": {
		"lib": ["dom", "ES2020"],
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"allowJs": false,
		"outDir": "./dist",
		"types": ["node"],
		"skipLibCheck": true
	},
	"compileOnSave": true
}
